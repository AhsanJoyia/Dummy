@model ResetPasswordDTO
@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
}
<!DOCTYPE html>
<html lang="zxx" class="js">

<head>
    <meta charset="utf-8">
    <meta name="author" content="STM">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description"
        content="Atlantic International University, Inc. is a private for-profit distance learning university based in Honolulu, Hawaii. It was founded in December 1998 as Atlantic University, Inc. It offers undergraduate and graduate degrees including doctorates.">
    <!-- Fav Icon  -->
    <link rel="shortcut icon" href="./images/favicon.png">
    <!-- Page Title  -->
    <title>@ViewData["Title"] - Tutor</title>
    <!-- StyleSheets  -->
    <link rel="stylesheet" href="~/assets/css/admintheme.min.css">
    <link id="skin-default" rel="stylesheet" href="~/assets/css/theme.css">
</head>

<body class="nk-body bg-lighter npc-default has-sidebar ">
    <div class="nk-app-root">
        <div class="nk-main ">
            <div class="nk-wrap nk-wrap-nosidebar">
                <div class="nk-content ">
                    <div class="nk-split nk-split-page nk-split-md">
                        <div class="nk-split-content nk-block-area nk-block-area-column nk-auth-container bg-white">
                            <div class="absolute-top-right d-lg-none p-3 p-sm-5">
                                <a href="#" class="toggle btn-white btn btn-icon btn-light" data-target="athPromo"><em
                                        class="icon ni ni-info"></em></a>
                            </div>
                            <div class="nk-block nk-block-middle nk-auth-body">
                                <div class="brand-logo pb-5">
                                    <a href="html/index.html" class="logo-link">
                                        <img class="logo-light logo-img logo-img-lg"
                                            src="~/assets/images/admin/logos/AIULogo.png"
                                            srcset="./images/logo2x.png 2x" alt="logo">
                                        <img class="logo-dark logo-img logo-img-lg"
                                            src="~/assets/images/admin/logos/AIULogo.png"
                                            srcset="./images/logo-dark2x.png 2x" alt="logo-dark">
                                    </a>
                                </div>
                                <div class="nk-block-head">
                                    <div class="nk-block-head-content">
                                        <h5 class="nk-block-title">Reset Password</h5>
                                    </div>
                                </div><!-- .nk-block-head -->
                                <form class="form-validate is-alter" autocomplete="off" asp-controller="Account"
                                    asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post"
                                    role="form">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-group">
                                        <div class="form-label-group">
                                            <label class="form-label" asp-for="Email">Email</label>
                                        </div>
                                        <div class="form-control-wrap">
                                            <input autocomplete="off" asp-for="Email"
                                                class="form-control form-control-lg" required id="email-address"
                                                placeholder="Enter your email">
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <!-- .form-group -->
                                    <div class="form-group">
                                        <div class="form-label-group">
                                            <label class="form-label" asp-for="Password">Password</label>
                                        </div>
                                        <div class="form-control-wrap">
                                            <a tabindex="-1" href="#"
                                                class="form-icon form-icon-right passcode-switch lg"
                                                data-target="password">
                                                <em class="passcode-icon icon-show icon ni ni-eye"></em>
                                                <em class="passcode-icon icon-hide icon ni ni-eye-off"></em>
                                            </a>
                                            <input autocomplete="new-password" asp-for="Password"
                                                class="form-control form-control-lg" required id="password"
                                                placeholder="Enter new password">
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <!-- .form-group -->
                                    <!-- .form-group -->
                                    <div class="form-group">
                                        <div class="form-label-group">
                                            <label class="form-label" asp-for="ConfirmPassword">Confirm Password</label>
                                        </div>
                                        <div class="form-control-wrap">
                                            <a tabindex="-1" href="#"
                                                class="form-icon form-icon-right passcode-switch lg"
                                                data-target="password">
                                                <em class="passcode-icon icon-show icon ni ni-eye"></em>
                                                <em class="passcode-icon icon-hide icon ni ni-eye-off"></em>
                                            </a>
                                            <input autocomplete="new-password" asp-for="ConfirmPassword"
                                                class="form-control form-control-lg" required id="password"
                                                placeholder="Enter new password again">
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <!-- .form-group -->
                                    <div class="form-group">
                                        <button class="btn btn-lg btn-primary btn-block">Reset</button>
                                    </div>
                                </form><!-- form -->
                                <div class="form-note-s2 pt-4">
                                    <a asp-controller="Account" asp-action="Login">Return to login</a>
                                </div>
                            </div>
                            <!-- .nk-block -->

                            <div class="nk-block nk-auth-footer">
                                <div class="nk-block-between">
                                    <ul class="nav nav-sm">
                                        <li class="nav-item">
                                            <a class="nav-link" href="#">Terms & Condition</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#">Privacy Policy</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="#">Help</a>
                                        </li>
                                        <li class="nav-item dropup">
                                            <a class="dropdown-toggle dropdown-indicator has-indicator nav-link"
                                                data-toggle="dropdown" data-offset="0,10"><small>English</small></a>
                                            <div class="dropdown-menu dropdown-menu-sm dropdown-menu-right">
                                                <ul class="language-list">
                                                    <li>
                                                        <a href="#" class="language-item">
                                                            <img src="~/assets/images/admin/flags/english.png" alt=""
                                                                class="language-flag">
                                                            <span class="language-name">English</span>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="#" class="language-item">
                                                            <img src="~/assets/images/admin/flags/spanish.png" alt=""
                                                                class="language-flag">
                                                            <span class="language-name">Español</span>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="#" class="language-item">
                                                            <img src="~/assets/images/admin/flags/french.png" alt=""
                                                                class="language-flag">
                                                            <span class="language-name">Français</span>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="#" class="language-item">
                                                            <img src="~/assets/images/admin/flags/portugal.png" alt=""
                                                                class="language-flag">
                                                            <span class="language-name">Português</span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </li>
                                    </ul><!-- .nav -->
                                </div>
                                <div class="mt-3">
                                    <p>
                                        Copyright &copy; 1979 - @DateTime.Now.Year <a
                                            href="https://www.aiu.edu/">AIU</a>. Power By <a
                                            href="https://www.softtechmedia.com/" target="_blank">Soft Tech Media</a>
                                    </p>
                                </div>
                            </div>

                            <!-- .nk-block -->
                        </div>

                        <!-- .nk-split-content -->

                        <div class="nk-split-content nk-split-stretch bg-lighter d-flex toggle-break-lg toggle-slide toggle-slide-right"
                            data-content="athPromo" data-toggle-screen="lg" data-toggle-overlay="true">
                            <div class="slider-wrap w-100 w-max-550px p-3 p-sm-5 m-auto">
                                <div class="slider-init" data-slick='{"dots":true, "arrows":true}'>
                                    <div class="slider-item">
                                        <div class="nk-feature nk-feature-center">
                                            <div class="nk-feature-content py-4 p-sm-5">
                                                <h4>AIU</h4>
                                                <p>You can start to create your products easily with its user-friendly
                                                    design & most completed responsive layout.</p>
                                            </div>
                                            <div class="nk-feature-img">
                                                <img class="round" src="~/assets/images/admin/general/image.png"
                                                    srcset="./images/slides/promo-a2x.png 2x" alt="">
                                            </div>
                                        </div>
                                    </div><!-- .slider-item -->
                                    <div class="slider-item">
                                        <div class="nk-feature nk-feature-center">
                                            <div class="nk-feature-img">
                                                <img class="round" src="~/assets/images/admin/general/image.png"
                                                    srcset="./images/slides/promo-b2x.png 2x" alt="">
                                            </div>
                                            <div class="nk-feature-content py-4 p-sm-5">
                                                <h4>AIU</h4>
                                                <p>You can start to create your products easily with its user-friendly
                                                    design & most completed responsive layout.</p>
                                            </div>
                                        </div>
                                    </div><!-- .slider-item -->
                                    <div class="slider-item">
                                        <div class="nk-feature nk-feature-center">
                                            <div class="nk-feature-img">
                                                <img class="round" src="~/assets/images/admin/general/image.png"
                                                    srcset="./images/slides/promo-c2x.png 2x" alt="">
                                            </div>
                                            <div class="nk-feature-content py-4 p-sm-5">
                                                <h4>AIU</h4>
                                                <p>You can start to create your products easily with its user-friendly
                                                    design & most completed responsive layout.</p>
                                            </div>
                                        </div>
                                    </div><!-- .slider-item -->
                                </div><!-- .slider-init -->
                                <div class="slider-dots"></div>
                                <div class="slider-arrows"></div>
                            </div><!-- .slider-wrap -->
                        </div>

                        <!-- .nk-split-content -->
                    </div>

                    <!-- .nk-split -->
                </div>
            </div>
        </div>
    </div>
    <!-- Start JavaScript Files - Required for Admin Themes -->
    <script src="~/assets/js/bundle.js?ver=2.9.1"></script>
    <script src="~/assets/js/scripts.js?ver=2.9.1"></script>
    <!-- End JavaScript Files - Required for Admin Themes -->
</body>

</html>
@section Scripts {
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}